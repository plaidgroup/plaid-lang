	override method void visitParsedNominalStructure(immutable ParsedNominalStructure node) {
		LOG("visit ParsedNominalStructure");
		node.stateQi.accept(this);
		node.staticArgs.map(fn (item) => { item.accept(this); item });
		
		match ( symbolForAST(node.stateQi) ) {
		    case Some {
		        val sym = symbolForAST(node.stateQi).value;
		        match ( sym ) {
		            case StateSymbol {
                        if ( sym.getStaticParameterCount() != node.staticArgs.size() ) {
                            ABORT("<NameResolverPass> State '" + sym.getFQN() + "' requires " + sym.getStaticParameterCount()  + " static arguments and not " + node.staticArgs.size());
                        };
                    }
                    default { /* nop */ }
                };
		    }
		    default { ABORT("<NameResolutionPass> Cannot find symbol for state qualifier.") }
		};
	}	
	
	override method void visitParsedPatternCase(immutable ParsedPatternCase node) {
		LOG("visit ParsedPatternCase");
		node.pattern.accept(this);
		val symbol = match ( symbolForAST(node.pattern) ) {
		    case Some { symbolForAST(node.pattern).value }
		    default { ABORT("<NameResolutionPass> Cannot find symbol for case pattern.") }
		};
		match ( symbol ) {
		    case StateSymbol {
		        if ( symbol.getStaticParameterCount() != node.staticArgs.size() ) {
		            ABORT("<NameResolverPass> State '" + symbol.getFQN() + "' requires " + symbol.getStaticParameterCount()  + " static arguments and not " + node.staticArgs.size());
		        };
		    }
		    default { /* nop */ }
		};
		node.staticArgs.do(fn (item) => item.accept(this) );
		node.body.accept(this);
	}

	override method void visitParsedUnaryOperatorExpr(immutable ParsedUnaryOperatorExpr node) {
		node.expression.accept(this);
		//node.operator.accept(this);
	}

    override method void visitParsedVarDecl(immutable ParsedVarDecl node) {
        DEBUG(DEBUG_PRIO_LOW, "<NameResolutionPass> visit ParsedVarDecl");

        node.specifier.accept(this);
        node.varType.accept(this);
        //node.id.accept(this);
        node.expr.accept(this);
        
        val shared VariableSymbol mySymbol = this.sf.makeVariableSymbol(node.id.name, node);
        val ctx = this.stack.peek().value;
        val result = ctx.put(node.id.name, mySymbol);
        ifElse ( result ) {
            addSymbolForAST(node.id, mySymbol);
            addSymbolForAST(node, mySymbol);
        }{
            val otherSymbol = ctx.find(node.id.name);
            match (otherSymbol) {
                case Some {
                   val otherDecl = otherSymbol.value.declaration;
                   ERROR(node.id.token, "N_DUPLICATE_VAR", node.id.name + " on line " + otherDecl.token.beginLine);
                }
                case None {
                   ERROR(node.id.token, "N_DUPLICATE_VAR", node.id.name);
                }
            };
        }
    }
    
    override method void visitParsedUnitLiteral(immutable ParsedUnitLiteral node) {
