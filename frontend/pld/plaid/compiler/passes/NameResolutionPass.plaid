    override method void visitParsedUnpackInnerGroups(immutable ParsedUnpackInnerGroups node) {
        DEBUG(DEBUG_PRIO_LOW, "<NameResolutionPass> visit ParsedUnitLiteral");
        node.body.accept(this);
        val ctx = this.stack.peek().value;
        val thisSymbolOpt = ctx.find("this");
        match ( thisSymbolOpt ) {
            case Some {
                addSymbolForAST(node, thisSymbolOpt.value);
            }
            default { ABORT("<NameResolutionPass> Cannot find 'this' symbol.") }
        };
    }
